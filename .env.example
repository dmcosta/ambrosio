# Ambrosio AI Development Team Configuration
# Copy this to .env and fill in your actual values

# =================
# API Keys & Tokens
# =================

# Discord Bot Token (required for Discord integration)
DISCORD_TOKEN=your_discord_bot_token_here

# GitHub Personal Access Token (required for GitHub integration)
GITHUB_TOKEN=your_github_token_here

# AI Model API Keys (at least one required)
GEMINI_API_KEY=your_gemini_api_key_here
CLAUDE_API_KEY=your_claude_api_key_here

# =================
# Database Configuration
# =================

# PostgreSQL Password
POSTGRES_PASSWORD=secure_ambrosio_password_123

# Grafana Admin Password
GRAFANA_PASSWORD=secure_grafana_password_123

# =================
# Agent Model Configuration
# =================

# Planner Agent (Requirements analysis & task breakdown)
PLANNER_MODEL_PROVIDER=gemini
PLANNER_MODEL=gemma2:9b

# Coder Agent (Code generation & implementation)
CODER_MODEL_PROVIDER=claude
CODER_MODEL=claude-sonnet-4-20250514

# Reviewer Agent (Code review & quality assurance)
REVIEWER_MODEL_PROVIDER=ollama
REVIEWER_MODEL=llama3.1:8b

# =================
# System Configuration
# =================

# Log Level (DEBUG, INFO, WARN, ERROR)
LOG_LEVEL=INFO

# Enable detailed logging for troubleshooting
ENABLE_DEBUG_LOGGING=false

# Maximum concurrent tasks per agent
MAX_CONCURRENT_TASKS=3

# Task timeout in minutes
TASK_TIMEOUT_MINUTES=30

# =================
# GitHub Configuration
# =================

# Default GitHub organization/user
DEFAULT_GITHUB_ORG=your-github-username

# Default repository for testing
DEFAULT_TEST_REPO=your-github-username/test-repo

# =================
# Advanced Configuration
# =================

# Enable performance monitoring
ENABLE_PERFORMANCE_MONITORING=true

# Enable security scanning
ENABLE_SECURITY_SCANNING=true

# Redis cache TTL in seconds
REDIS_CACHE_TTL=3600

# Kafka retention time in hours
KAFKA_RETENTION_HOURS=24